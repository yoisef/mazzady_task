<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="property"
            type="com.mazaady.task.domain.models.PropData" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:id="@+id/property_layout"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/parent_layout"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                android:id="@+id/property_parent_name"
                android:textSize="12sp"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"

                android:background="@drawable/button_shape"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/option_selected"
                    android:layout_width="match_parent"
                    android:padding="12dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"

                    android:layout_height="wrap_content" />

            </LinearLayout>


        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:id="@+id/child_layout"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:id="@+id/property_child_name"
            android:textSize="12sp"
            android:layout_marginStart="8dp"

            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"

            android:background="@drawable/button_shape"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/child_spinner"
                android:layout_width="match_parent"
                android:layout_margin="8dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            android:id="@+id/other_layout"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:layout_marginStart="8dp"

                android:textSize="12sp"
                android:text="@string/speacify_here"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/other_text"
                android:layout_width="match_parent"
                android:padding="8dp"

                android:textStyle="bold"
                android:background="@drawable/button_shape"

                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </LinearLayout>
</layout>